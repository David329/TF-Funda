<Window x:Class="Presentacion.frmReserva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmReserva" Height="600" Width="800">
    <Grid>
        <Label Content="Huesped:" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Fecha de entrada:" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Fecha de salida:" HorizontalAlignment="Left" Margin="20,110,0,0" VerticalAlignment="Top" FontSize="14"/>
        <DatePicker HorizontalAlignment="Left" Margin="165,113,0,0" VerticalAlignment="Top" Width="120"/>
        <DatePicker HorizontalAlignment="Left" Margin="165,63,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblNombreHuesped" Content="Label" HorizontalAlignment="Left" Margin="165,10,0,0" VerticalAlignment="Top" FontSize="14" Width="120"/>
        <GroupBox Header="Datos de Habitación" HorizontalAlignment="Left" Margin="20,160,0,0" VerticalAlignment="Top" Height="386" Width="349">
            <Grid>

                <Label Content="Tipo de habitación:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Habitación:" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="14"/>
                <ComboBox x:Name="cmbNumHabit" HorizontalAlignment="Left" Margin="169,51,0,0" VerticalAlignment="Top" Width="120"/>
                <GroupBox Header="Características de la habitación:" HorizontalAlignment="Left" Margin="23,87,0,0" VerticalAlignment="Top" Height="225" Width="289">
                    <DataGrid x:Name="dgCaracHabit" Margin="10,10,0,11" HorizontalAlignment="Left" Width="257"/>
                </GroupBox>
                <ComboBox x:Name="cmbTipoHabit" HorizontalAlignment="Left" Margin="169,10,0,0" VerticalAlignment="Top" Width="120"/>
                <Button x:Name="btnAgregarAReserva" Content="Agregar a la reserva" HorizontalAlignment="Left" Margin="50,325,0,0" VerticalAlignment="Top" Width="223" Height="31"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Reserva" HorizontalAlignment="Left" Margin="386,10,0,0" VerticalAlignment="Top" Height="536" Width="388">
            <Grid>
                <DataGrid x:Name="dgHabitReservadas" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="289" Width="356"/>
                <Label Content="Habitaciones reservadas:" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="143"/>
                <Button x:Name="btnEliminarHabit" Content="Eliminar habitación" HorizontalAlignment="Left" Margin="110,369,0,0" VerticalAlignment="Top" Width="164" Height="37"/>
                <Button x:Name="btnCompletarReserva" Content="Completar reserva" HorizontalAlignment="Left" Margin="110,438,0,0" VerticalAlignment="Top" Width="164" Height="37"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
